{% extends 'base.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('css/forms.css') }}">
{% endblock %}

{% block title %}Hello wish create!{% endblock %}

{% block body %}

    <div>
        <h1>Hello wish create!</h1>
        <br>
        {{ form_start(wishForm) }}

        {{ form_label(wishForm.title) }}
        {{ form_widget(wishForm.title) }}
        {% if wishForm.title.vars.errors|length  %}
            <div class="alert alert-warning">
                {{ form_errors(wishForm.title) }}
            </div>
        {% endif %}

        {{ form_label(wishForm.description) }}
        {{ form_widget(wishForm.description) }}
        {{ form_errors(wishForm.description) }}

        {{ form_label(wishForm.author) }}
        {{ form_widget(wishForm.author) }}
        {{ form_errors(wishForm.author) }}

        <br>
        <button type="submit" class="btn btn-success">Cr√©er un souhait</button>
        {{ form_end(wishForm) }}
    </div>
{% endblock %}
